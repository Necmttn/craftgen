{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "@0no-co/graphqlsp",
        "schema": "https://craftgen-5a67c0.ingress-daribow.ewp.live/graphql",
        "tadaOutputLocation": "./src/wordpress-graphql.d.ts"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "esnext"
  },
  "include": [
    ".",
    ".next/types/**/*.ts",
    "../../packages/ui/src/views/playground-create-dialog.tsx",
    "../../packages/ui/src/views/playground-edit-dialog.tsx",
    "../../packages/ui/src/views/playground-list.tsx",
    "../../packages/ui/src/components/data-table.tsx",
    "../../packages/ui/src/components/data-table-toolbar.tsx",
    "../../packages/ui/src/components/data-table-pagination.tsx",
    "../../packages/ui/src/components/use-table.tsx",
    "../../packages/ui/src/components/data-table-view-options.tsx",
    "../../packages/ui/src/components/data-table-faceted-filter.tsx",
    "../../packages/ui/src/views/workflow-input.tsx",
    "../../packages/ui/src/views/module-header.tsx",
    "../../packages/composer/src/actions",
    "../../packages/composer/src/ui",
    "../../packages/composer/src/composer.tsx",
    "../../packages/composer/src/context-menu.tsx",
    "../../packages/composer/src/control-utils.tsx",
    "../../packages/composer/src/control.ts",
    "../../packages/composer/src/editor.tsx",
    "../../packages/composer/src/store.ts",
    "../../packages/composer/src/use-store.ts",
    "../../packages/composer/src/playground.tsx",
    "../../packages/composer/src/components",
    "../../packages/ui/src/views/token-item.tsx",
    "../../packages/composer/src/logs",
    "../../packages/ui/src/views/user-nav.tsx"
  ],
  "exclude": ["node_modules"]
}
