{
  "productName": "CraftGen",
  "version": "0.0.1",
  "identifier": "com.craftgen.ai",
  "build": {
    "beforeDevCommand": "pnpm copy-functions && pnpm dev ",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm copy-functions && pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "visible": false,
        "title": "craftgen",
        "width": 1200,
        "height": 800,
        "minHeight": 400,
        "minWidth": 600,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "publisher": "Craftgen AI",
    "copyright": "Craftgen AI",
    "shortDescription": "Craftgen AI Agent Building Platform",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32.png",
      "icons/72.png",
      "icons/128.png",
      "icons/256.png",
      "icons/512.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["functions/*"],
    "externalBin": ["binaries/edge-runtime"]
  }
}
