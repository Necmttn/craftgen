{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [],
          "cmd": "",
          "name": "binaries/welcome",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "start",
            "--main-service",
            {
              "validator": "\\S+"
            },
            "--event-worker",
            {
              "validator": "\\S+"
            }
          ],
          "cmd": "echo $APPDATA",
          "name": "binaries/edge-runtime",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open",
    "autostart:default",
    "notification:default",
    "store:default",
    "fs:default",
    "log:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:3000/**"
        },
        {
          "url": "http://localhost:54321/**"
        },
        {
          "url": "https://craftgen.ai/**"
        },
        {
          "url": "https://siwhcblzmpihqdvvooqz.supabase.co/**"
        }
      ]
    },
    "oauth:allow-start",
    "sentry:default"
  ]
}
