{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [],
          "cmd": "",
          "name": "binaries/welcome",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {

          "args": [
            "start",
            "--main-service",
            {
              "validator": "\\S+"
            },
            "--event-worker",
            {
              "validator": "\\S+"
            }
          ],
          "cmd": "echo $APPDATA",
          "name": "binaries/edge-runtime",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open"
  ]
}